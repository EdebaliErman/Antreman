<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap-reboot.min.css">
    <title>Document</title>
</head>

<body>
    <h1>Ürünler</h1>
    <!--Dizi şeklinde sıralama-->
    <%= products[0].id %>
        <%= products[0].name %>
            <%= products[0].price %>
                <br>
                <hr>
                <!--Koşulu şekilde sıralama-->
                <ul>
                    <% products.forEach(product=> { %>
                        <% if (product.isActive) {%>
                            <li>
                                <%= product.name%>
                                    <%= product.price %>
                            </li>
                            <% } %>
                                <% }) %>
                </ul>
                <hr>
                <!--Tüm dizileri sıralama-->
                <ul>
                    <% products.forEach(product=> { %>
                        <li>
                            <%= product.name%>
                                <%= product.price %>
                        </li>
                        <% }) %>
                </ul>
                <style>
                    body {
                        list-style: none;

                    }

                    a {
                        text-decoration: none;
                        color: black;
                    }
                    .container{
                        display: flex;
                        justify-self: center;
                        align-items: center;
                        margin: 3rem;
                      
                    }
                    .container li{
                        margin: 2rem;
                        padding: 1rem;
                        height: 170px;
                        width: 100px;
                        box-shadow: 1px 1px 1px 1px black;
                    }
                </style>
                <!--Link ile id'de ki ürüne gitme-->
                <div class="container">
                    <% products.forEach(product=> { %>
                        <li><a href="/products/<%= product.id %>">
                                <img src="/images/<%=product.image%>" width="100" height="140" alt=""><br>
                                <%= product.name%>
                                    <%= product.price %>
                            </a>
                        </li>
                        <% }) %>
                </div>
</body>

</html>