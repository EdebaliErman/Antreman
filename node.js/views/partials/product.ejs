<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../bootstrap/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body>
    <h1>Telefonlar</h1>
   
    <!--Dizi şeklinde sıralama-->
    <style>
     
    </style>
    <style>
      
        .container {
            display: flex;
            align-items: center;
            margin: 3rem;
            text-align: center;
        }
        a,a:hover{
            text-decoration: none;
            color: black;
        }
        .container li {
            margin: 2rem;
            padding: 1rem;
            height: 200px;
            width: 200px;
            box-shadow: 1px 1px 1px 1px black;
        }

        .phone-container {
         display: flex;
         justify-content: center;
        }
    </style>
    <!--Link ile id'de ki ürüne gitme-->
    <div class="phone-container">
        <div class="container">
            <% products.forEach(product=> { %>
                <li><a href="/products/<%=product.id %>">
                        <img src="/images/<%=product.img%>" width="100" height="140" alt=""><br>
                        <%= product.name%>
                            <%= product.price %>
                    </a>
                </li>
                <% }) %>
        </div>
    </div>
</body>

</html>